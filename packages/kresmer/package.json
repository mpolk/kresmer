{
  "name": "kresmer",
  "private": true,
  "version": "0.9.6",
  "author": "Dmitriy Stepanenko",
  "description": "\"Kreslennya Merezh\" - network diagram editor and viewer: the core component",
  "module": "dist/kresmer.es.js",
  "main": "dist/kresmer.umd.js",
  "types": "dist/Kresmer.d.ts",
  "style": "dist/style.css",
  "exports": {
    ".": {
      "import": "./dist/kresmer.es.js",
      "require": "./dist/kresmer.umd.js"
    },
    "./style": {
      "import": "./dist/style.css"
    }
  },
  "config": {
    "port": 5173
  },
  "scripts": {
    "lint": "eslint -c .eslintrc.cjs --ext .ts ./src",
    "build-only": "vite build",
    "build-watch": "vite build --watch",
    "type-check": "vue-tsc --noEmit",
    "vite:dev": "vite --port ${npm_package_config_port}",
    "vite:build": "run-p type-check build-only",
    "vite:preview": "vite preview --port ${npm_package_config_port}",
    "cypress:open": "cypress open --component >/dev/null 2>&1 &",
    "cypress:run": "cypress run --component"
  },
  "build": {
    "appId": "kresmer",
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}"
    },
    "files": [
      "dist"
    ]
  },
  "dependencies": {
    "postcss": "^8.4.21",
    "uuid": "^9.0.0",
    "vue": "^3.2.37"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.1.0",
    "@types/node": "^20.9.3",
    "@types/uuid": "^9.0.1",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/tsconfig": "^0.5.0",
    "chai-colors": "^1.0.1",
    "cypress": "^13.8.1",
    "diff-js-xml": "^1.0.8",
    "eslint": "^8.5.0",
    "eslint-plugin-vue": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.54.3",
    "typescript": "^5.0.3",
    "vite": "^5.2.10",
    "vite-plugin-css-injected-by-js": "^3.0.1",
    "vite-plugin-dts": "^3.0.0-beta.3",
    "vue-tsc": "^2.0.4"
  }
}
