{
  "name": "kresmer",
  "private": true,
  "version": "0.0.0",
  "author": "Dmitriy Stepanenko",
  "description": "\"Kreslennya Merezh\" - network diagram editor and viewer: the core component",
  "module": "dist/Kresmer.es.js",
  "main": "dist/Kresmer.umd.js",
  "types": "dist/Kresmer.d.ts",
  "style": "dist/styles.css",
  "exports": {
    ".": {
      "import": "./dist/kresmer.es.js",
      "require": "./dist/kresmer.umd.js"
    }
  },
  "config": {
    "port": 5173
  },
  "scripts": {
    "lint": "eslint -c .eslintrc.cjs --ext .ts ./src",
    "build-only": "vite build",
    "build-watch": "vite build --watch",
    "type-check": "vue-tsc --noEmit",
    "vite:dev": "vite --port ${npm_package_config_port}",
    "vite:build": "run-p type-check build-only",
    "vite:preview": "vite preview --port ${npm_package_config_port}"
  },
  "build": {
    "appId": "kresmer",
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}"
    },
    "files": [
      "dist"
    ]
  },
  "dependencies": {
    "postcss": "^8.4.21",
    "uuid": "^9.0.0",
    "vue": "^3.2.37"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.1.0",
    "@types/node": "^18.11.18",
    "@types/uuid": "^9.0.1",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/tsconfig": "^0.4.0",
    "eslint": "^8.5.0",
    "eslint-plugin-vue": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.54.3",
    "typescript": "^5.0.3",
    "vite": "^4.0.2",
    "vite-plugin-css-injected-by-js": "^3.0.1",
    "vite-plugin-dts": "^3.0.0-beta.3",
    "vue-tsc": "^1.0.3"
  }
}
