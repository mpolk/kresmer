                v-bind:font-size="fontSize">âšœ</text>
        </template>
        <props>
            <prop name="width" type="Number" required="true" default="256" />
            <prop name="height" type="Number" required="true" default="256" />
            <prop name="text" type="String" default="Silver Kresmer" />
