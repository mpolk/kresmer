{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "strict": true,
    "sourceMap": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "dist",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src/**/*"],
}