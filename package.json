{
  "name": "kresmer",
  "private": true,
  "version": "0.0.0",
  "author": "Dmitriy Stepanenko",
  "description": "\"Kreslennya Merezh\" - network diagram editor and viewer",
  "main": "dist/Kresmer.js",
  "types": "dist/Kresmer.d.ts",
  "exports": {
    ".": {
      "import": "./dist/kresmer.es.js",
      "require": "./dist/kresmer.umd.js"
    }
  },
  "config": {
    "port": 5173
  },
  "scripts": {
    "vite:dev": "vite --port ${npm_package_config_port}",
    "vite:build": "run-p type-check build-only",
    "vite:preview": "vite preview --port ${npm_package_config_port}",
    "ts": "tsc -p tsconfig.electron.json",
    "watch": "tsc -p tsconfig.electron.json -w",
    "test:e2e": "start-server-and-test preview http://localhost:${npm_package_config_port}/ 'cypress open --e2e'",
    "test:e2e:ci": "start-server-and-test preview http://localhost:${npm_package_config_port}/ 'cypress run --e2e'",
    "test:unit": "cypress open --component",
    "test:unit:ci": "cypress run --component --quiet --reporter spec",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint -c .eslintrc.cjs --ext .ts ./src",
    "app:dev": "npm run ts && concurrently vite \" electron . autoload.kre\" \"npm run watch\"",
    "app:build": "npm run vite:build && npm run ts && electron-builder",
    "app:preview": "npm run vite:build && npm run ts && electron . autoload.kre"
  },
  "build": {
    "appId": "kresmer",
    "asar": true,
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}"
    },
    "files": [
      "dist"
    ],
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "./src/assets/logo.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "linux": {
      "icon": "./src/assets/logo.png",
      "category": "Network, Design"
    }
  },
  "dependencies": {
    "@popperjs/core": "^2.11.6",
    "bootstrap": "^5.2.3",
    "pinia": "^2.0.16",
    "sass": "^1.54.3",
    "vue": "^3.2.37",
    "vue-router": "^4.1.2"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.1.0",
    "@types/bootstrap": "^5.2.6",
    "@types/node": "^18.11.18",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/tsconfig": "^0.1.3",
    "concurrently": "^7.3.0",
    "cypress": "^12.0.0",
    "electron": "^22.0.0",
    "electron-builder": "^23.1.0",
    "eslint": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-vue": "^9.0.0",
    "mini-svg-data-uri": "^1.4.4",
    "npm-run-all": "^4.1.5",
    "start-server-and-test": "^1.14.0",
    "typescript": "^4.8.4",
    "vite": "^4.0.2",
    "vite-plugin-css-injected-by-js": "^2.4.0",
    "vite-plugin-dts": "^1.7.1",
    "vue-tsc": "^1.0.3"
  }
}
