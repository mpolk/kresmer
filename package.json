{
  "name": "e-kresmer",
  "private": true,
  "version": "0.6.0",
  "author": "Dmitriy Stepanenko <mpolk@sns.net.ua>",
  "description": "\"Kreslennya Merezh\" - network diagram editor and viewer: the standalone editor",
  "main": "dist/main/main.js",
  "config": {
    "port": 5173,
    "args": ""
  },
  "scripts": {
    "build-only": "vite build",
    "build-component": "npm run vite:build -w kresmer",
    "type-check": "vue-tsc --noEmit",
    "vite:dev": "vite --port ${npm_package_config_port}",
    "vite:build": "run-p type-check build-only",
    "vite:preview": "vite preview --port ${npm_package_config_port}",
    "ts": "tsc",
    "watch": "tsc -w",
    "test:e2e": "start-server-and-test preview http://localhost:${npm_package_config_port}/ 'cypress open --e2e'",
    "test:e2e:ci": "start-server-and-test preview http://localhost:${npm_package_config_port}/ 'cypress run --e2e'",
    "test:unit": "cypress open --component",
    "test:unit:ci": "cypress run --component --quiet --reporter spec",
    "lint": "eslint -c .eslintrc.cjs --ext .ts ./src",
    "app:dev0": "npm run build-component && npm run ts && concurrently vite \"electron . ${npm_package_config_args}\" \"npm run watch\"",
    "app:dev": "npm run build-component && npm run ts && concurrently \"npm run -w kresmer build-watch\" vite \"electron . ${npm_package_config_args}\" \"npm run watch\"",
    "app:prebuild": "run-s vite:build ts",
    "app:build": "run-s build-component vite:build ts && electron-builder -lw",
    "app:preview": "run-s build-component vite:build ts && electron . ${npm_package_config_args}",
    "wdio": "wdio run ./wdio.conf.ts"
  },
  "build": {
    "appId": "kresmer",
    "productName": "Kresmer",
    "asar": true,
    "directories": {
      "buildResources": "src/assets",
      "output": "release/${version}"
    },
    "files": [
      "dist"
    ],
    "extraFiles": [
      {
        "from": "lib",
        "to": "lib"
      },
      {
        "from": "xsd",
        "to": "xsd"
      }
    ],
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "logo.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "linux": {
      "icon": "logo.icns",
      "category": "Graphics; Engineering",
      "target": [
        "deb",
        "AppImage"
      ]
    }
  },
  "dependencies": {
    "@popperjs/core": "^2.11.6",
    "bootstrap": "^5.2.3",
    "date-fns": "^3.0.6",
    "kresmer": "^0.0.0",
    "popper": "^1.0.1",
    "vue": "^3.3.9"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.1.0",
    "@testing-library/webdriverio": "^3.2.1",
    "@types/bootstrap": "^5.2.6",
    "@types/node": "^20.9.3",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/tsconfig": "^0.5.0",
    "@wdio/cli": "^8.26.2",
    "@wdio/local-runner": "^8.26.2",
    "@wdio/mocha-framework": "^8.26.2",
    "@wdio/spec-reporter": "^8.26.2",
    "concurrently": "^8.0.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.3",
    "eslint": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-vue": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.54.3",
    "start-server-and-test": "^2.0.0",
    "typescript": "^5.0.3",
    "ts-node": "^10.9.2",
    "vite-plugin-css-injected-by-js": "^3.0.1",
    "vite-plugin-dts": "^3.0.0-beta.3",
    "vite": "^5.0.0",
    "vue-tsc": "^1.0.3",
    "wdio-electron-service": "^6.0.2",
    "wdio-wait-for": "^3.0.10"
  },
  "workspaces": [
    "./packages/kresmer"
  ]
}
