{
  "name": "kresmer-electron",
  "private": true,
  "version": "0.0.0",
  "author": "Dmitriy Stepanenko",
  "description": "\"Kreslennya Merezh\" - network diagram editor and viewer: the standalone editor",
  "main": "dist/main/main.js",
  "config": {
    "port": 5173
  },
  "scripts": {
    "build-only": "vite build",
    "build-component": "npm run vite:build -w kresmer",
    "type-check": "vue-tsc --noEmit",
    "vite:dev": "vite --port ${npm_package_config_port}",
    "vite:build": "run-p type-check build-only",
    "vite:preview": "vite preview --port ${npm_package_config_port}",
    "ts": "tsc",
    "watch": "tsc -w",
    "test:e2e": "start-server-and-test preview http://localhost:${npm_package_config_port}/ 'cypress open --e2e'",
    "test:e2e:ci": "start-server-and-test preview http://localhost:${npm_package_config_port}/ 'cypress run --e2e'",
    "test:unit": "cypress open --component",
    "test:unit:ci": "cypress run --component --quiet --reporter spec",
    "lint": "eslint -c .eslintrc.cjs --ext .ts ./src",
    "app:dev0": "npm run build-component && npm run ts && concurrently vite \"electron . network-core.kre\" \"npm run watch\"",
    "app:dev": "npm run build-component && npm run ts && concurrently \"npm run -w kresmer build-watch\" vite \"electron . network-core.kre\" \"npm run watch\"",
    "app:build": "run-s build-component vite:build ts && electron-builder",
    "app:preview": "run-s build-component vite:build ts && electron . network-core.kre"
  },
  "build": {
    "appId": "kresmer",
    "productName": "kresmer",
    "artifactName": "${productName}_${version}.${ext}",
    "asar": true,
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}"
    },
    "files": [
      "dist"
    ],
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "./dist/logo.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "linux": {
      "icon": "./dist/logo.png",
      "category": "Network, Design"
    }
  },
  "dependencies": {
    "@popperjs/core": "^2.11.6",
    "bootstrap": "^5.2.3",
    "date-fns": "^2.29.3",
    "kresmer": "^0.0.0",
    "vite-plugin-css-injected-by-js": "^3.0.1",
    "vite-plugin-dts": "^2.0.0-beta.3",
    "vue": "^3.2.37"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.1.0",
    "@types/bootstrap": "^5.2.6",
    "@types/node": "^18.8.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/devtools": "^6.5.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/tsconfig": "^0.1.3",
    "concurrently": "^7.3.0",
    "cypress": "^12.0.0",
    "electron": "^23.1.0",
    "electron-builder": "^23.1.0",
    "eslint": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-vue": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.54.3",
    "start-server-and-test": "^1.14.0",
    "typescript": "^4.8.4",
    "vite": "^4.0.2",
    "vue-tsc": "^1.0.3"
  },
  "workspaces": [
    "./packages/kresmer"
  ]
}
